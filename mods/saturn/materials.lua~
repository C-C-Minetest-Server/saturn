local DEFAULT_BLOCK_WEIGHT = 1000
local DEFAULT_TREE_WEIGHT = 500
local DEFAULT_WOOD_WEIGHT = 100
local DEFAULT_FENCE_WEIGHT = 10
local DEFAULT_LEAVES_WEIGHT = 1
local DEFAULT_INGOT_WEIGHT = 12.345
local DEFAULT_OTHER_WEIGHT = 1

local DEFAULT_BLOCK_VOLUME = 1
local DEFAULT_OTHER_VOLUME = 1

saturn.items_weight = {}
saturn.items_volume = {}

saturn.add_item_weight = function(item_name, weight)
	saturn.items_weight[item_name] = weight
end

saturn.add_item_volume = function(item_name, volume)
	saturn.items_volume[item_name] = volume
end

saturn.get_item_weight = function(item_name)
	local value=existing_items_weights[item_name]
	if value ~= nil then
		return value
	end

	if string.find(item_name, "block") or 
	string.find(item_name, "stone") or 
	string.find(item_name, "brick") or 
	string.find(item_name, "dirt") or 
	string.find(item_name, "cobble") then
		return DEFAULT_BLOCK_WEIGHT
	end 

	if string.find(item_name, "tree") then 
		return DEFAULT_TREE_WEIGHT
	end

	if string.find(item_name, "wood") then
		return DEFAULT_WOOD_WEIGHT
	end

	if string.find(item_name, "leaves") or 
	string.find(item_name, "needles") then
		return DEFAULT_LEAVES_WEIGHT
	end

	if string.find(item_name, "fence") then
		return DEFAULT_FENCE_WEIGHT
	end

	if string.find(item_name, "ingot") then
		return DEFAULT_INGOT_WEIGHT
	end 

	return DEFAULT_OTHER_WEIGHT
end

saturn.get_item_volume = function(item_name)
	local value = items_volume[item_name]
	if value ~= nil then
		return value
	end

	if string.find(item_name, "block") or 
	string.find(item_name, "stone") or 
	string.find(item_name, "brick") or 
	string.find(item_name, "dirt") or 
	string.find(item_name, "cobble") or
	string.find(item_name, "tree") or 
	string.find(item_name, "wood") or
	string.find(item_name, "leaves") or 
	string.find(item_name, "needles") or
	string.find(item_name, "fence") then
		return DEFAULT_BLOCK_VOLUME
	end

	return DEFAULT_OTHER_VOLUME
end
